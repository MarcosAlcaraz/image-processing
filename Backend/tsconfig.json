{
  "compilerOptions": {
    "target": "es2017",                       // Especifica la versión de ECMAScript de destino
    "module": "commonjs",                     // Especifica el sistema de módulos
    "lib": ["es6"],                           // Bibliotecas a incluir en la compilación
    "outDir": "./dist",                       // Directorio de salida para los archivos compilados
    "rootDir": "./src",                       // Directorio raíz de los archivos fuente .ts
    "strict": true,                           // Habilita todas las opciones de verificación estricta de tipos
    "esModuleInterop": true,                  // Permite la interoperabilidad con módulos CommonJS
    "skipLibCheck": true,                     // Omite la verificación de tipos de los archivos de declaración
    "forceConsistentCasingInFileNames": true, // Asegura la consistencia en las mayúsculas/minúsculas de los nombres de archivo
    "resolveJsonModule": true                 // Permite importar archivos .json
  },
  "include": ["src/**/*"],                    // Archivos a incluir en la compilación
  "exclude": ["node_modules", "**/*.spec.ts"] // Archivos a excluir
}